#!/bin/sh

set -e

# Enable all repositories and backports (for zfs).
lb config noauto \
	--architectures amd64 \
	--system live \
	--updates true \
	--backports true \
	--security true \
	--win32-loader false \
	--archive-areas "main contrib non-free" \
	--debian-installer false \
	--bootappend-live "boot=live components hostname=sclocbuild" \
	--linux-packages "linux-image linux-headers" \
	--memtest none \
	--apt-indices false \
	--mirror-binary http://mirrors.dotsrc.org/debian \
	--mirror-bootstrap http://mirrors.dotsrc.org/debian \
	--grub-splash splash.png \
	--clean \
	"$@"
